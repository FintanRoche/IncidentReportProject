@model Reports
@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> UserManager
<body>
    <form asp-action="Line" method="post" role="form">
        <div class="container1">
            <div><i>Injured Person Details</i></div><br />
            <div id="indent">
                <div class="form-group row">
                    <label asp-for="Principal.FirstName" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="Principal.FirstName" class="form-control" />
                    </div>
                    <label asp-for="Principal.LastName" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="Principal.LastName" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Principal.DOB" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="Principal.DOB" class="form-control" type="date" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Principal.nextOfKin" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="Principal.nextOfKin" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Principal.SubjectType" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <select class="form-control">
                            @foreach (string option in Options.ManagmentUnit)
                            {
                                <option asp-for="Model.Principal.SubjectType" value=@option>@option</option>
                            }

                        </select>
                        <span asp-validation-for="Principal.SubjectType" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>


        <div class="container1">
            <div><i>Incident Details</i></div><br />
            <div id="indent">

                <div class="form-group row">
                    <label asp-for="Date" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="Date" class="form-control" type="date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <label asp-for="Time" class="col-md-2 control-label"></label>
                    <div class="col-3">
                        <input asp-for="Time" class="form-control" type="time" />
                        <span asp-validation-for="Time" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IncidentType" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="IncidentType" class="form-control" />
                        <span asp-validation-for="IncidentType" class="text-danger"></span>
                    </div>
                    <label asp-for="IncidentLocation" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="IncidentLocation" class="form-control" />
                        <span asp-validation-for="IncidentLocation" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Serverity" class="col-md-2 control-label"></label>
                    <div class="rate">
                        <input type="radio" asp-for="Serverity" id="star5" name="rate" value="5" />
                        <label></label>
                        <input type="radio" asp-for="Serverity" id="star4" name="rate" value="4" />
                        <label></label>
                        <input type="radio" asp-for="Serverity" id="star3" name="rate" value="3" />
                        <label></label>
                        <input type="radio" asp-for="Serverity" id="star2" name="rate" value="2" />
                        <label></label>
                        <input type="radio" asp-for="Serverity" id="star1" name="rate" value="1" />
                        <label></label>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="MedicalIntervention" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <label>yes</label>
                        <input type="radio" asp-for="MedicalIntervention" value="true" />
                        <label>no</label>
                        <input type="radio" asp-for="MedicalIntervention" value="false" />
                        <span asp-validation-for="MedicalIntervention" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IncidentDescription" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <textarea asp-for="IncidentDescription" rows="4" cols="40" class="control-label"></textarea>
                        <span asp-validation-for="IncidentDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>

        </div>
        <div class="container1">
            <div>
                <label>Additional Witness</label>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="PresentFirstName" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="PresentFirstName" class="form-control" />
                    <span asp-validation-for="PresentFirstName" class="text-danger"></span>
                </div>
                <label asp-for="PresentLastName" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="PresentLastName" class="form-control" />
                    <span asp-validation-for="PresentLastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PresentPhone" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="PresentPhone" class="form-control" type="text" />
                    <span asp-validation-for="PresentPhone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="IncidentDescription" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <textarea asp-for="IncidentDescription" rows="4" cols="40" class="control-label"></textarea>
                    <span asp-validation-for="IncidentDescription" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="container1">
            <div>
                <label>Line Manager</label>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="LineManager.FirstName" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="LineManager.FirstName" class="form-control" />
                    <span asp-validation-for="LineManager.FirstName" class="text-danger"></span>
                </div>
                <label asp-for="LineManager.LastName" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="LineManager.LastName" class="form-control" />
                    <span asp-validation-for="LineManager.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class=" form-group row">
                <label asp-for="Email" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <input asp-for="UserId" type="hidden" asp-action="@UserManager.GetUserId(User)" />
        </div>
        <div class="container1">


            <div class="form-group row">
                <label asp-for="LineManager.Notified" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <select>
                        @foreach (string option in Options.ManagmentUnit)
                        {
                            <option asp-for="LineManager.Notified" value=@option>@option</option>
                        }
                    </select>
                </div>
            </div>

            <div class=" form-group row">
                <label asp-for="LineManager.Responses" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <input asp-for="LineManager.Responses" class="form-control" />
                </div>
            </div>

            <div class=" form-group row">
                <label asp-for="LineManager.Comment" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <input asp-for="LineManager.Comment" class="form-control" />
                </div>
            </div>

        </div>


            <input asp-for="ReportId" type="hidden" />
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-primary" value="Next" />
                </div>
            </div>




    </form>
   
</body>

