@model Reports
@using Microsoft.AspNetCore.Identity

@inject UserManager<IdentityUser> UserManager
<body>
    <form asp-action="Line" method="post" role="form">
        <div class="container1">
            <div><i>Injured Person Details</i></div><br />
            <div id="indent">
                <div class="form-group row">
                    <label asp-for="Subject.FirstName" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="Subject.FirstName" class="form-control" />
                    </div>
                    <label asp-for="Subject.LastName" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="Subject.LastName" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Subject.DOB" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="Subject.DOB" class="form-control" type="date" />
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Subject.NextOfKin" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="Subject.NextOfKin" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Subject.SubjectType" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <select asp-for="Subject.SubjectType" class="form-control">
                            <option value=Subject.SubjectType>@Model.Subject.SubjectType</option>
                            @foreach (string option in Options.SubjectType)
                            {
                                if (option != Model.Subject.SubjectType)
                                {
                                <option  value=@option>@option</option>}
                            }

                        </select>
                        <span asp-validation-for="Subject.SubjectType" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>


        <div class="container1">
            <div><i>Incident Details</i></div><br />
            <div id="indent">

                <div class="form-group row">
                    <label asp-for="Date" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="Date" class="form-control" type="date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <label asp-for="Time" class="col-md-2 control-label"></label>
                    <div class="col-3">
                        <input asp-for="Time" class="form-control" type="time" />
                        <span asp-validation-for="Time" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IncidentType" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="IncidentType" class="form-control" />
                        <span asp-validation-for="IncidentType" class="text-danger"></span>
                    </div>
                    <label asp-for="IncidentLocation" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="IncidentLocation" class="form-control" />
                        <span asp-validation-for="IncidentLocation" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Serverity" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <select asp-for="Serverity" class="form-control">
                            @for (int i = 0; i < 6; i++)
                            {
                                <option value=@i>@i</option>
                            }

                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="MedicalIntervention" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <label>yes</label>
                        <input type="radio" asp-for="MedicalIntervention" value="true" />
                        <label>no</label>
                        <input type="radio" asp-for="MedicalIntervention" value="false" />
                        <span asp-validation-for="MedicalIntervention" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="IncidentDescription" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <textarea asp-for="IncidentDescription" rows="4" cols="40" class="control-label"></textarea>
                        <span asp-validation-for="IncidentDescription" class="text-danger"></span>
                    </div>
                </div>
            </div>

        </div>
        <div class="container1">
            <div>
                <label>Additional Witness</label>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="Witness.FirstName" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="Witness.FirstName" class="form-control" />
                    <span asp-validation-for="Witness.FirstName" class="text-danger"></span>
                </div>
                <label asp-for="Witness.LastName" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="Witness.LastName" class="form-control" />
                    <span asp-validation-for="Witness.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Witness.Phone" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="Witness.Phone" class="form-control" type="text" />
                    <span asp-validation-for="Witness.Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="IncidentDescription" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <textarea asp-for="IncidentDescription" rows="4" cols="40" class="control-label"></textarea>
                    <span asp-validation-for="IncidentDescription" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="container1">
            <div>
                <label>Line Manager</label>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="LineManager.FirstName" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="LineManager.FirstName" class="form-control" />
                    <span asp-validation-for="LineManager.FirstName" class="text-danger"></span>
                </div>
                <label asp-for="LineManager.LastName" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="LineManager.LastName" class="form-control" />
                    <span asp-validation-for="LineManager.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class=" form-group row">
                <label asp-for="LineManager.Email" class="col-md-2 control-label"></label>
                <div class="col-md-3">
                    <input asp-for="LineManager.Email" class="form-control" />
                    <span asp-validation-for="LineManager.Email" class="text-danger"></span>
                </div>
            </div>

            <input asp-for="UserId" type="hidden" asp-action="@UserManager.GetUserId(User)" />
        </div>
        <div class="container1">


            <div class="form-group row">
                <label asp-for="Notified" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <select>
                        @foreach (string option in Options.Boolean)
                        {
                            <option asp-for="Notified" value=@option>@option</option>
                        }
                    </select>
                </div>
            </div>

            <div class=" form-group row">
                <label asp-for="Responses" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <input asp-for="Responses" class="form-control" />
                </div>
            </div>

            <div class=" form-group row">
                <label asp-for="Comment" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <input asp-for="Comment" class="form-control" />
                </div>
            </div>

        </div>


            <input asp-for="ReportId" type="hidden" />
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-primary" value="Next" />
                </div>
            </div>




    </form>
   
</body>

